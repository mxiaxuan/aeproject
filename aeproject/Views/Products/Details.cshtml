﻿@{
    Layout = null; // 不使用佈局
}

@model aeproject.Models.Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>ae shop - Product</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .navbar {
            position: sticky;
            top: 0;
            z-index: 1020;
            padding-top: 3px;
            padding-bottom: 3px;
        }

        body {
            background: linear-gradient(to bottom, #f0f8ff, #000000cc);
            background-attachment: fixed;
            background-size: cover;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .product-details-container {
            display: flex;
            align-items: flex-start;
            padding: 50px;
            background-color: #ffffff3d;
            color: black;
            border-radius: 8px;
            max-width: 800px;
            margin: 20px auto;
        }

        .product-image {
            flex: 0 0 40%;
            margin-right: 20px;
        }

            .product-image img {
                max-width: 100%;
                border-radius: 8px;
                object-fit: cover;
            }

        .product-info {
            flex: 1;
        }

        .product-title {
            font-size: 1.4rem;
            font-weight: bold;
            margin-bottom: 6px;
        }

        .product-price {
            font-size: 1.1rem;
            color: red;
            margin-bottom: 6px;
        }

        .divider {
            border-top: 1px solid #555;
            margin: 6px 0;
        }

        .product-stock {
            font-size: 0.85rem;
            color: black;
            margin-bottom: 12px;
        }

        .add-to-cart {
            font-size: 0.85rem;
            padding: 6px 12px;
        }

        /* 手風琴樣式 */
        .accordion .card {
            border: none; /* 移除卡片外圍邊框 */
            border-radius: 0;
        }

        .accordion .card-header {
            border: none; /* 移除卡片標題邊框 */
            background-color: #343a40;
            color: white;
            padding: 0.5rem 0rem;
            border-radius: 5px;
        }

        .accordion .card-body {
            font-size: 0.8rem;
            background-color: #f8f9fa;
            color: #333;
            padding: 0rem 1rem 1rem 0rem;
            white-space: pre-line;
        }

        .accordion-button {
            color: white;
            font-size: 0.8rem;
            text-align: left;
            width: 100%;
            padding: 0.1rem 1rem;
            background-color: transparent;
            border: none;
            display: flex;
            align-items: center;
            justify-content: start; /* 調整為左對齊 */
        }

            .accordion-button:hover {
                color: #FFF;
            }

            .accordion-button:focus {
                border: none;
                box-shadow: none;
            }

        /* 旋轉的三角形圖示 */
        .accordion-icon {
            transition: transform 0.3s ease;
            margin-left: auto; /* 讓圖示在右側 */
        }

            .accordion-icon.rotate {
                transform: rotate(180deg);
            }

        /* 手風琴內容樣式 */
        .accordion .card-body {
            font-size: 0.8rem;
            background-color: #f8f9fa;
            color: #333;
            padding: 0.5rem 1rem 1rem;
            white-space: pre-line;
        }

        .quantity-selector {
            display: flex;
            align-items: center;
            font-size: 0.9rem; /* 縮小整體字體大小 */
            margin-bottom: 8px;
        }

            .quantity-selector label {
                margin-right: 8px;
                font-weight: bold;
            }

        .quantity-control {
            display: flex;
            align-items: center;
        }

            .quantity-control .btn {
                width: 30px; /* 縮小按鈕大小 */
                padding: 0;
                font-size: 1rem;
            }

        .quantity-display {
            display: inline-block;
            width: 40px;
            text-align: center;
            font-size: 0.9rem;
            margin: 0 4px;
            background-color: #fff; /* 添加白色背景 */
            border: 1px solid #ccc; /* 添加邊框 */
            border-radius: 4px; /* 圓角邊框 */
            padding: 2px 0; /* 調整內距 */
        }

        .btn-custom {
            background-color: #000;
            font-size: 0.9rem;
            padding: 8px 16px;
            border-radius: 5px;
            font-weight: bold;
        }

        .btn-add-to-cart {
            background-color: #000; /* 黑色背景 */
            color: white; /* 白色文字 */
            width: 48%;
            font-weight: bold;
        }

            .btn-add-to-cart:hover {
                background-color: #FFF; /* 白色背景 */
                color: black; /* 黑色文字 */
                border: 1px solid #000; /* 添加黑色邊框 */
            }

            .btn-add-to-cart:active {
                border: 1px solid #000; /* 添加黑色邊框 */
            }

        .btn-buy-now {
            background-color: #FFF; /* 白色背景 */
            color: black; /* 黑色文字 */
            width: 48%;
            font-weight: bold;
            border: 1px solid #000; /* 添加黑色邊框 */
        }

            .btn-buy-now:hover {
                background-color: #000; /* 黑色背景 */
                color: white; /* 白色文字 */
            }

            .btn-buy-now:active {
                border: 1px solid #000; /* 添加黑色邊框 */
            }

        .recommended-products-container {
            overflow-x: auto;
            padding-bottom: 20px;
            display: flex;
            align-items: flex-start;
            padding: 100px;
            color: black;
            border-radius: 8px;
            max-width: 1900px;
            margin: 20px auto;
        }

        .d-flex {
            display: flex;
            flex-wrap: nowrap;
            gap: 15px; /* Adjust spacing between cards */
        }

        .card {
            width: 100%; /* Ensure the card takes up its allotted space */
            flex-shrink: 0; /* Prevent card from shrinking */
        }

        .card-body {
            padding: 10px;
        }

        .card-title {
            font-size: 14px;
            font-weight: bold;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .card-text {
            font-size: 12px;
        }

        .card-img-top {
            height: 300px; /* Control image height */
            width: 100%;
            object-fit: cover; /* Ensure image covers the card space without distortion */
        }

        /* 滾動容器 */
        .recommended-products-container .d-flex {
            overflow-x: auto; /* 使其支持水平滾動 */
            -webkit-overflow-scrolling: touch; /* 改善在觸控設備上的滾動體驗 */
        }

            /* 自定義滾動條樣式 */
            .recommended-products-container .d-flex::-webkit-scrollbar {
                height: 10px; /* 控制滾動條的高度 */
            }

            .recommended-products-container .d-flex::-webkit-scrollbar-track {
                background: #F5F5F5; /* 滾動條背景 */
            }

            .recommended-products-container .d-flex::-webkit-scrollbar-thumb {
                background: #000; /* 滾動條顏色 */
            }

                .recommended-products-container .d-flex::-webkit-scrollbar-thumb:hover {
                    background: #555; /* 滾動條懸停時顏色 */
                }

        .dropdown-item {
            display: flex; /* 使用彈性盒模型 */
            align-items: center; /* 垂直居中對齊 */
            gap: 10px; /* 圖示與文字間距 */
        }

            .dropdown-item i {
                font-size: 16px; /* 確保圖示大小一致 */
                width: 20px; /* 固定寬度，保證對齊 */
                text-align: center; /* 圖示居中對齊 */
            }

        .dropdown-menu {
            padding: 0.5rem 1rem; /* 適當調整內距 */
        }
    </style>
</head>
<body id="page-top">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <div class="navbar-left d-flex align-items-center">
                <a class="navbar-brand" asp-controller="Products" asp-action="Index">
                    <img src="~/assets/img/aespalogo.png" alt="Logo" style="max-width: 80px; height: auto;" />
                </a>
            </div>
            <div class="navbar-right d-flex align-items-center ml-auto">
                <ul class="navbar-nav align-items-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-user"></i> @User.Identity.Name
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                <a class="dropdown-item" asp-controller="UserFavorite" asp-action="Favorites">
                                    <i class="fa-regular fa-heart"></i> 我的收藏
                                </a>
                                <a class="dropdown-item" asp-controller="Cart" asp-action="Index">
                                    <i class="fa-solid fa-cart-shopping"></i> 購物車
                                </a>
                                <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                                    <button type="submit" class="dropdown-item">
                                        <i class="fa-solid fa-right-from-bracket"></i> 登出
                                    </button>
                                </form>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">登入</a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <!-- 商品詳細頁 -->
    <div class="product-details-container d-flex align-items-start">
        <!-- 左側圖片 -->
        <div class="product-image">
            <div class="magnifier-container">
                <img src="@Model.ProductImage" alt="@Model.ProductName" id="mainImage" />
                <div id="magnifyGlass"></div>
            </div>
        </div>


        <!-- 右側內容 -->
        <div class="product-info">
            <h2 class="product-title">@Model.ProductName</h2>
            <div class="d-flex justify-content-between align-items-center">
                <p class="product-price text-danger">
                    NT$@String.Format("{0:N0}", Model.Price)
                </p>
                <a href="javascript:void(0);" onclick="addToFavorites()" class="ml-2" style="float: right;">
                    @{
                        bool isFavorite = (bool)(ViewData["IsFavorite"] ?? false);
                    }
                    <i class="fas fa-heart" id="favoriteIcon" style="color: @(isFavorite ? "#000" : "#FFF");"></i>
                </a>
            </div>

            <hr class="divider" />

            <!-- 手風琴效果 -->
            <div class="accordion" id="productAccordion">
                <div class="card">
                    <div class="card-header" id="headingOne">
                        <button class="accordion-button" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne" onclick="toggleIcon(this)">
                            Product Detail
                            <i class="fas fa-chevron-down accordion-icon"></i>
                        </button>
                    </div>

                    <div id="collapseOne" class="collapse mt-0" aria-labelledby="headingOne" data-parent="#productAccordion">
                        <div class="card-body">
                            @Model.Description
                        </div>
                    </div>
                </div>
            </div>
            <hr class="divider" />
            <div class="quantity-selector mt-3">
                <label for="quantity">數量：</label>
                <div class="quantity-control">
                    <button type="button" class="btn btn-outline-secondary" onclick="decreaseQuantity()">-</button>
                    <input id="quantityDisplay" type="text" class="quantity-display" value="1" oninput="manualQuantityChange()" />
                    <button type="button" class="btn btn-outline-secondary" onclick="increaseQuantity()">+</button>
                </div>
            </div>

            <p class="product-stock">庫存數量: @Model.StockQuantity</p>

            <div class="d-flex justify-content-between mt-4">
                <form asp-controller="Cart" asp-action="AddToCart" method="post" style="width: 48%;">
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <input type="hidden" name="quantity" id="cartQuantity" value="1" />
                    <button type="submit" class="btn btn-custom btn-add-to-cart w-100">
                        <i class="fa-thin fa-cart-circle-plus"></i> 加入購物車
                    </button>
                </form>
                <form asp-controller="Checkout" asp-action="Index" method="post" style="width: 48%;">
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <input type="hidden" name="quantity" value="@("1")" id="buyQuantity" />
                    <button type="submit" class="btn btn-custom btn-buy-now w-100">購買</button>
                </form>
            </div>
        </div>
    </div>

    @{
        var product = ViewData["Product"] as aeproject.Models.Product;
        var recommendedProducts = ViewData["RecommendedProducts"] as List<aeproject.Models.Product>;
    }


    <div class="recommended-products-container">
        <div class="d-flex overflow-auto">
            @foreach (var recommended in recommendedProducts)
            {
                <div class="card me-3" style="max-width: 250px; flex-shrink: 0;">
                    <a href="@Url.Action("Details", "Products", new { id = recommended.ProductId })">
                        <img src="@recommended.ProductImage" class="card-img-top" alt="@recommended.ProductName">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@recommended.ProductName</h5>
                        <p class="card-text">NT$@String.Format("{0:N0}", recommended.Price)</p>
                    </div>
                </div>
            }
        </div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js" crossorigin="anonymous"></script>
    <script>
            function toggleIcon(button) {
                const icon = button.querySelector('.accordion-icon');
                icon.classList.toggle('rotate');
            }

            function toggleIcon(button) {
                const icon = button.querySelector('.accordion-icon');
                icon.classList.toggle('rotate');
            }

            function addToFavorites() {
            const icon = document.getElementById("favoriteIcon");
            const currentColor = icon.style.color;
            const action = currentColor === "black" ? "RemoveFromFavorites" : "AddToFavorites";

            $.ajax({
                url: `/UserFavorite/${action}`,
                type: 'POST',
                data: { productId: @Model.ProductId },
                success: function (response) {
                    if (response.success) {
                        // 切換愛心顏色
                        icon.style.color = currentColor === "black" ? "white" : "black";
                    }
                },
                error: function (xhr) {
                    if (xhr.status === 401) {
                        alert('請先登入');
                        window.location.href = '/Account/Login';
                    } else {
                        alert('操作失敗：' + xhr.responseText);
                    }
                }
            });
        }

            let quantity = 1;
            const maxQuantity = @Model.StockQuantity;

            function decreaseQuantity() {
                if (quantity > 1) {
                    quantity--;
                    updateQuantityDisplay();
                }
            }

            function increaseQuantity() {
                if (quantity < maxQuantity) {
                    quantity++;
                    updateQuantityDisplay();
                }
            }

            function updateQuantityDisplay() {
                document.getElementById("quantityDisplay").value = quantity;
                document.getElementById("cartQuantity").value = quantity;
                document.getElementById("buyQuantity").value = quantity;
            }

            function manualQuantityChange() {
                const input = document.getElementById("quantityDisplay");
                const value = parseInt(input.value);

                if (isNaN(value) || value < 1) {
                    quantity = 1;
                } else if (value > maxQuantity) {
                    quantity = maxQuantity;
                } else {
                    quantity = value;
                }

                updateQuantityDisplay();
            }
    </script>
</body>
</html>